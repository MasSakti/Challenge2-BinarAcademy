<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />
            <gradient
                android:angle="270"
                android:centerColor="#C5C6C5"
                android:centerY="0.75"
                android:endColor="#C5C6C5"
                android:startColor="#C5C6C5" />
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:centerColor="#DF5A26"
                    android:centerY="0.75"
                    android:endColor="#E1DF5A26"
                    android:startColor="#DF5A26" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />
                <gradient
                    android:angle="270"
                    android:endColor="#E1DF5A26"
                    android:startColor="#DF5A26" />
            </shape>
        </clip>
    </item>

</layer-list>